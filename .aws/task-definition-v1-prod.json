{
  "family": "fastapi-bootstrap-v1-prod",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/fastapi-bootstrap-prod-task-execution-role",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/fastapi-bootstrap-prod-task-role",
  "containerDefinitions": [
    {
      "name": "fastapi-bootstrap-v1",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/fastapi-bootstrap:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "prod"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fastapi-bootstrap-prod",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs-v1"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
